{
  "name": "pactum-graphql",
  "version": "1.0.0",
  "main": "index.js",
  "scripts": {
    "start-server": "npx serverest",
    "test": "mocha ./teste/**/*.test.js --reporter mochawesome --reporter-options reportDir=mochawesome-report,reportFilename=index.html,html=true,json=false",
    "test:API": "mocha ./teste/api/*.test.js --reporter mochawesome --reporter-options reportDir=mochawesome-report,reportFilename=api.html,html=true,json=false",
    "test:categoriasProvider": "mocha ./teste/contract/categoriasProvider.test.js --reporter mochawesome --reporter-options reportDir=mochawesome-report,reportFilename=categoriasProvider.html,html=true,json=false",
    "test:categoriasConsumer": "mocha ./teste/contract/categoriasConsumer.test.js --reporter mochawesome --reporter-options reportDir=mochawesome-report,reportFilename=categoriasConsumer.html,html=true,json=false",
    "test:produtosProvider": "mocha ./teste/contract/produtosProvider.test.js --reporter mochawesome --reporter-options reportDir=mochawesome-report,reportFilename=produtosProvider.html,html=true,json=false",
    "test:produtosConsumer": "mocha ./teste/contract/produtosConsumer.test.js --reporter mochawesome --reporter-options reportDir=mochawesome-report,reportFilename=produtosConsumer.html,html=true,json=false",
    "cy:run-ci": "start-server-and-test start-server http://localhost:3000 test",
    "merge-reports": "mochawesome-merge mochawesome-report/*.json > mochawesome.json",
    "generate-report": "marge mochawesome.json --reportDir mochawesome-report",
    "test:report": "npm run test && npm run merge-reports && npm run generate-report"
  },
  "author": "Jo√£o Pedro",
  "license": "ISC",
  "dependencies": {
    "mocha": "^11.7.1",
    "pactum": "^3.8.0",
    "pactum-flow-plugin": "^0.1.4"
  },
  "devDependencies": {
    "mochawesome": "^7.1.3",
    "mochawesome-merge": "^4.4.1",
    "mochawesome-report-generator": "^6.2.0",
    "start-server-and-test": "^2.0.13"
  }
}